<MyLayout>
    do_default_tab: False
    id: mylayout_id
    TabbedPanelItem:
        text: '股價查詢'
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                hint_text: '輸入股票名稱或代碼'
                multiline: False
                size_hint: (None, None)
                height: 50
                width: 500
                pos_hint: {'center_x': 0.5}
                on_text_validate: app.on_enter(self)
            Label:
                id: label
                size_hint: (1, 1)
            Image:
                id: img
    TabbedPanelItem:
        text: '基本財報'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: financial
                size_hint: (1, 1)
    TabbedPanelItem:
        text: '財報分析'
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: analyze
                size_hint: (1, 1)